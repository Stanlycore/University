<Window x:Class="Sha512CrackerWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Взломщик паролей SHA-512" Height="497" Width="800" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поля для ввода алфавита и длины пароля -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Алфавит:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="CharsetTextBox" Width="400" Height="30" Margin="10,0,10,0" Text="0123456789abcdefghijklmnopqrstuvwxyz"/>
            <TextBlock Text="Длина пароля:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="PasswordLengthTextBox" Width="50" Height="30" Margin="10,0,10,0" Text="7"/>
            <Button x:Name="ConfirmSettingsButton" Content="Подтвердить" Width="100" Click="ConfirmSettingsButton_Click"/>
        </StackPanel>

        <!-- Текстовое поле для ввода хэшей -->
        <TextBox x:Name="HashesTextBox" Grid.Row="1" AcceptsReturn="True" AcceptsTab="True" Height="100" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

        <!-- Список для отображения текущего пароля -->
        <ListBox x:Name="ThreadProgressListBox" Grid.Row="2" Margin="0,0,0,10"/>

        <!-- Отображение времени и количества найденных хэшей -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="TimerTextBlock" Text="Прошедшее время: 00:00:00" Margin="0,0,10,0"/>
            <TextBlock x:Name="FoundCountTextBlock" Text="Найдено: 0/0"/>
        </StackPanel>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="StartButton" Content="Начать" Width="100" Click="StartButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="PauseResumeButton" Content="Пауза" Width="100" Click="PauseResumeButton_Click" IsEnabled="False" Margin="0,0,10,0"/>
            <Button x:Name="ResetButton" Content="Сброс" Width="100" Click="ResetButton_Click"/>
        </StackPanel>

        <!-- Поле для результатов -->
        <TextBox x:Name="ResultsTextBox" Grid.Row="5" IsReadOnly="True" Height="150" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>